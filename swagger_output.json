        ],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "required": [
                "account_id",
                "limit",
                "products"
              ],
              "properties": {
                "account_id": {
                  "type": "integer",
                  "description": "Unique account ID",
                  "example": 898989
                },
                "limit": {
                  "type": "integer",
                  "minimum": 9000,
                  "description": "Credit limit for the account",
                  "example": 9000
                },
                "products": {
                  "type": "array",
                  "minItems": 1,
                  "description": "List of products associated with the account.",
                  "items": {
                    "type": "string",
                    "description": "Product name.",
                    "example": "CurrencyService"
                  },
                  "example": [
                    "Brokerage",
                    "CurrencyService",
                    "Derivatives",
                    "InvestmentFund",
                    "Commodity",
                    "InvestmentStock"
                  ]
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
