{
  "swagger": "2.0",
  "info": {
    "title": "Customer Transaction API Documentation",
    "description": "A simple CRUD web services for managing customers' accounts and transactions",
    "version": "1.0.0"
  },
  "host": "cse341-w03-project.onrender.com",
  "basePath": "/",
  "schemes": [
    "https"
  ],
  "paths": {
    "/": {
      "get": {
        "description": "The root of the project",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api-docs": {
      "get": {
        "description": "The Swagger API test",
        "responses": {
          "default": {
            "description": ""
          }
        }
      }
    },
    "/accounts/": {
      "get": {
        "description": "List all accounts API",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      },
      "post": {
        "description": "Post a new account API",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "Account to be created",
            "required": true,
            "schema": {
              "type": "object",
              "required": [
                "account_id",
                "limit",
                "products"
              ],
              "properties": {
                "account_id": {
                  "type": "integer",
                  "description": "Unique account ID.",
                  "example": 898989
                },
                "limit": {
                  "type": "integer",
                  "minimum": 9000,
                  "description": "Credit limit for the account.",
                  "example": 9000
                },
                "products": {
                  "type": "array",
                  "minItems": 1,
                  "description": "List of products associated with account.",
                  "items": {
                    "type": "string",
                    "description": "Product name",
                    "example": "CurrencyService"
                  },
                  "example": [
                    "Brokerage",
                    "CurrencyService",
                    "Derivatives",
                    "InvestmentFund",
                    "Commodity",
                    "InvestmentStock"
                  ]
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/accounts/{id}": {
      "get": {
        "description": "",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      },
      "put": {
        "description": "The API to update an account",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "The id of account to update"
          },
          {
            "name": "body",
            "in": "body",
            "description": "The files to update (only edit what needs to be changed)",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "account_id": {
                  "type": "integer",
                  "description": "Unique account ID.",
                  "example": 898989
                },
                "limit": {
                  "type": "integer",
                  "minimum": 9000,
                  "description": "Credit limit for the account.",
                  "example": 9000
                },
                "products": {
                  "type": "array",
                  "minItems": 1,
                  "description": "List of products associated with account.",
                  "items": {
                    "type": "string",
                    "description": "Product name",
                    "example": "CurrencyService"
                  },
                  "example": [
                    "Brokerage",
                    "CurrencyService",
                    "Derivatives",
                    "InvestmentFund",
                    "Commodity",
                    "InvestmentStock"
                  ]
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      },
      "delete": {
        "description": "The API to delete an account with id",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    }
  }
}